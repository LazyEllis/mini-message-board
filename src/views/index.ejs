<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home | Mini Message Board</title>
    <link rel="stylesheet" href="/reset.css">
    <link rel="stylesheet" href="/global.css">
    <link rel="stylesheet" href="/message.css">
  </head>
  <body>
    <h1>Mini Message Board</h1>
    <main>
      <div class="message-list">
        <% messages.forEach(message => { %>
          <div class="message-card">
            <div class="message-header">
              <div class="message-author"><%= message.author %></div>
              <div class="message-timestamp"><%= formatTimestamp(message.created_at) %></div>
            </div>
            <div class="message-body">
              <div class="message-text"><%= message.content %></div>
              <a href="/<%= message.id %>" class="link">Open</a>
            </div>
          </div>
        <% }); %>
        <a href="/new" class="link text-center">Send a message</a>
      </div>
    </main>
  </body>
</html>
